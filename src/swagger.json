{
    "openapi":"3.0.0",
    "info":{
        "title":"API - Daily Diet",
        "description":"Essa API tem como objetivo o acompanhamento do usuario com a dieta!",
        "contact":{
            "name":"Sérgio Almeida",
            "email":"sergioalmeidaa00@gmail.com"
        },
        "version":"1.0.0"
    },
    "servers":[
        {
            "url":"http://localhost:3001",
            "description":"API de Testes"
        }
    ],
    "tags":[
        {
            "name":"user",
            "description":"Endpoints de usuarios"
        },
        {
            "name":"food",
            "description":"Endpoints de Alimentação"
        }
    ],
    "paths":{
        "/user":{
            "post":{
                "tags":["user"],
                "summary":"Cadastro de Usuario",
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schemas/User"
                            },
                            "examples":{
                                "user":{
                                    "value":{
                                        "name":"Sérgio Almeida",
                                        "email":"sergioalmeidaa00@gmail.com",
                                        "password":"12345"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description":"OK",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "$ref":"#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "400":{
                        "description":"Email already exists"
                    }

                }
            }
        },
        "/user/auth":{
            "post":{
                "tags":["user"],
                "summary":"Autenticação de usuario",
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "email":{
                                        "type":"string"
                                    },
                                    "password":{
                                        "type":"string"
                                    }
                                }
                            },
                            "examples":{
                                "auth":{
                                    "value":{
                                        "email":"sergioalmeidaa00@gmail.com",
                                        "password":"12345"
                                    }
                                }
                            }

                        }
                    }
                },
                "responses":{
                    "201":{
                        "description":"OK",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object"
                                }
                            }
                        }
                    },
                    "400":{
                        "description":"Email already exists"
                    }

                }
            }            
        },
        "/food/create":{
            "post":{
                "tags":["food"],
                "summary":"Cadastro de Alimentação",
                "security":[{"bearerAuth":[]}],
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schemas/Food"
                            },
                            "examples":{
                                "food":{
                                    "value":{
                                        "name":"Pizza",
                                        "description":"Feriado",
                                        "date":"2023-04-06",
                                        "time":"15:00",
                                        "diet":true
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description":"Created"
                    }
                }
            }
        },
        "/food/update/{id}":{
            "put":{
                "tags":["food"],
                "summary":"Atualiza dados da Alimentação",
                "security":[{"bearerAuth":[]}],
                "parameters":[{
                    "name":"id",
                    "in":"path",
                    "description":"Id da alimentação",
                    "required":true
                }],
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schemas/Food"
                            },
                            "examples":{
                                "food":{
                                    "value":{
                                        "name":"Hamburguer",
                                        "description":"não sei",
                                        "date":"2023-04-06",
                                        "time":"21:00",
                                        "diet":true
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "204":{
                        "description":"No Content",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "$ref":"#/components/schemas/Food"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/food":{
            "get":{
                "tags":["food"],
                "summary":"Lista todas as alimentações",
                "security":[{"bearerAuth":[]}],
                "responses":{
                    "200":{
                        "description":"OK",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"array",
                                    "$ref":"#/components/schemas/Food"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/food/{id}":{
            "get":{
                "tags":["food"],
                "summary":"Lista Alimentação por ID",
                "security":[{"bearerAuth":[]}],
                "parameters":[{
                    "name":"id",
                    "in":"path",
                    "description":"Id da alimentação",
                    "required":true,
                    "schema":{
                        "type":"string"
                    }
                }],
                "responses":{
                    "200":{
                        "description":"OK",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "$ref":"#/components/schemas/Food"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/food/metrics":{
            "get":{
                "tags":["food"],
                "summary":"Lista as metricas realizada pelo paciente",
                "security":[{"bearerAuth":[]}],
                "responses":{
                    "200":{
                        "description":"OK",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "$ref":"#/components/schemas/Metrics"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/food/delete/{id}":{
            "delete":{
                "tags":["food"],
                "summary":"Delete Refeição por ID",
                "security":[{"bearerAuth":[]}],
                "parameters":[{
                    "name":"id",
                    "in":"path",
                    "description":"Id da alimentação",
                    "required":true,
                    "schema":{
                        "type":"string"
                    }
                }],
                "responses":{
                    "204":{
                        "description":"No Content"
                    }
                }
            }
        }

    },
    "components":{
        "schemas":{
            "User":{
                "type":"object",
                "properties":{
                    "id":{
                        "type":"uuid"
                    },
                    "name":{
                        "type":"string"
                    },
                    "email":{
                        "type":"string"
                    },
                    "password":{
                        "type":"string"
                    }
                }
            },
            "Food":{
                "type":"object",
                "properties":{
                    "id":{
                        "type":"uuid"
                    },
                    "description":{
                        "type":"string"
                    },
                    "date":{
                        "type":"string"
                    },
                    "time":{
                        "type":"string"
                    },
                    "diet":{
                        "type":"boolean"
                    },
                    "userId":{
                        "type":"uuid"
                    }

                }
            },
            "Metrics":{
                "type":"object",
                "properties":{
                   "amountFood":{
                        "type":"number"
                   },
                   "amountFoodDiet":{
                        "type":"number"
                   },
                   "amountFoodNotDiet":{
                        "type":"number"
                    },
                    "percentageDiet":{
                        "type":"number"
                    },
                    "percentageNotDiet":{
                        "type":"number"
                    },
                    "maxSequence":{
                        "type":"number"
                    }
                }
            }
        },
        "securitySchemes":{
            "bearerAuth":{
                "type":"http",
                "scheme":"bearer",
                "bearerFormat":"JWT"
            }
        }
    }


}